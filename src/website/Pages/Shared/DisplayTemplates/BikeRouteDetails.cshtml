@model CCC.Entities.BikeRoute

<div class="container p-3 m-0 ccc-grid text-center">
    @* <div class="container p-3 m-0 text-center"> *@
    <div class="row">
        <div class="col">
            <div>
                @Html.DisplayNameFor(model => model.Name): @Html.DisplayFor(model => model.Name)
            </div>
            <div>
                @Html.DisplayNameFor(model => model.Distance): @Html.DisplayFor(model => model.Distance) miles
            </div>
            <div>
                @Html.DisplayNameFor(model => model.Description): @Html.DisplayFor(model => model.Description)
            </div>
        </div>

    </div>
</div>
<p></p>

<div class="row">
    <div class="col">
        <div class="form-check form-switch">
            <label class="form-check-label" for="printViewToggle">Print View</label>
            <input class="form-check-input" type="checkbox" id="printViewToggle"
                onclick="toggleClass('route-table', 'ccc-green')">
        </div>
    </div>
</div>
<div class="container p-3 m-3 text-center">
    <div class="row">
        <div class="col ">
            <table id='route-table' class="table table-striped table-bordered table-sm ccc-green">
                <thead>
                    <tr>
                        <th scope="col">@Html.DisplayNameFor(model => model.Cues.First().Operation)</th>
                        <th scope="col">@Html.DisplayNameFor(model => model.Cues.First().StreetName)</th>
                        <th scope="col">@Html.DisplayNameFor(model => model.Cues.First().MileMarker)</th>
                        <th scope="col">@Html.DisplayNameFor(model => model.Cues.First().Notes)</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var cueRow in Model.Cues)
                    {
                        @Html.DisplayFor(modelItem => cueRow,"CueSheetTableRow")
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>