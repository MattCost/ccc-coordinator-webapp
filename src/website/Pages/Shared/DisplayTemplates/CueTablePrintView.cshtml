@model CCC.Entities.BikeRoute
@using CCC.Enums

<button type="button" class="btn btn-link" data-bs-toggle="modal" data-bs-target="#printModal" onclick="window.print()">
    Print View
</button>


<div id="printSection">

@Html.DisplayFor(model => model.Name) - @Html.DisplayFor(model => model.Distance)
<table id='route-table' class="table table-striped table-bordered table-sm">
    <thead>
        <tr>
            <th style="max-width:20px" scope="col">@* operation *@</th>
            <th style="max-width:55px" scope="col">@Html.DisplayNameFor(model => model.Cues.First().StreetName)</th>
            <th style="max-width:15px" scope="col">@* mile *@</th>
            @* <th scope="col">@Html.DisplayNameFor(model => model.Cues.First().Notes)</th> *@
        </tr>
    </thead>
    <tbody>
        @foreach (var cueRow in Model.Cues)
        {
            @* @Html.DisplayFor(modelItem => cueRow,"CueSheetTableRow") *@
            <tr>
                @* <th scope="row">@Html.DisplayFor(modelItem => cueRow.Operation)</th> *@
                <td>@cueRow.Operation.GetPrintAttribute()</td>
                <td>@Html.DisplayFor(modelItem => cueRow.StreetName)</td>
                <td>@(cueRow.MileMarker > 0 ? @Html.DisplayFor(modelItem => cueRow.MileMarker) :"")</td>
                @* <td>@Html.DisplayFor(model => model.Notes)</td> *@
            </tr>

        }
    </tbody>
</table>
</div>