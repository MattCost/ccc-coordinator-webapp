@model CCC.Entities.BikeRoute
@using CCC.Enums

<button type="button" class="btn btn-link" onclick="printId('route-@(Model.Id)')">
    Print View
</button>
<div class="print-preview">
    <div id='route-@(Model.Id)'>
        @Html.DisplayFor(model => model.Name) - @Html.DisplayFor(model => model.Distance)
        <table class="table table-striped table-bordered table-sm print-preview">
            <thead>
                <tr>
                    <th style="max-width:20px" scope="col">@* operation *@</th>
                    <th style="max-width:55px" scope="col">@Html.DisplayNameFor(model => model.Cues.First().Description)</th>
                    @* <th style="max-width:55px" scope="col">@Html.DisplayNameFor(model => model.Cues.First().StreetName)</th>*@
                    <th style="max-width:15px" scope="col">@* mile *@</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var cueRow in Model.Cues)
                {
                    <tr>
                        <td>@cueRow.Operation.GetPrintAttribute()</td>
                        @* <td>@Html.DisplayFor(modelItem => cueRow.StreetName)</td> *@
                        <td>@Html.DisplayFor(modelItem => cueRow.Description)</td>
                        <td>@(cueRow.MileMarker > 0 ? @Html.DisplayFor(modelItem => cueRow.MileMarker) : "")</td>
                    </tr>
                    @* if(!string.IsNullOrWhiteSpace(cueRow.Notes))
                    {
                        <tr>
                            <td></td>
                            <td>@(cueRow.Notes)</td>
                            <td></td>
                        </tr>
                    } *@
                }
            </tbody>
        </table>
    </div>
</div>