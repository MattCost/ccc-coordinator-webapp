@model CCC.ViewModels.RideEventViewModel
@using CCC.Enums


<div class="row">
    @foreach(var ride in Model.GroupRides)
    {
        var route = Model.BikeRoutes[ride.BikeRouteId];

        <div class="col">
            @Html.DisplayFor(modelItem => ride.RideType)<br>@Html.DisplayFor(model => route.Name) - @Html.DisplayFor(model => route.Distance)
            <table class="table table-striped table-bordered table-sm print-preview">
                <thead>
                    <tr>
                        <th style="max-width:20px" scope="col">@* operation *@</th>
                        @* <th style="max-width:55px" scope="col">@Html.DisplayNameFor(model => ride.Cues.First().StreetName) *@
                        <th style="max-width:55px" scope="col">@Html.DisplayNameFor(model => route.Cues.First().Description)
                        </th>
                        <th style="max-width:15px" scope="col">@* mile *@</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var cueRow in route.Cues)
                    {
                        <tr>
                            <td>@cueRow.Operation.GetPrintAttribute()</td>
                            @* <td>@Html.DisplayFor(modelItem => cueRow.StreetName)</td> *@
                            <td>@Html.DisplayFor(modelItem => cueRow.Description)</td>
                            <td>@(cueRow.MileMarker > 0 ? @Html.DisplayFor(modelItem => cueRow.MileMarker) : "")</td>
                        </tr>
                        @* if(!string.IsNullOrWhiteSpace(cueRow.Notes))
                        {
                            <tr>
                                <td></td>
                                <td>@(cueRow.Notes)</td>
                                <td></td>
                            </tr>
                        } *@
                    }
                </tbody>
            </table>

        </div>
    }
</div>