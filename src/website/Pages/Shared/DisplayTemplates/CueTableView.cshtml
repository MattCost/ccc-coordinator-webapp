@model CCC.Entities.BikeRoute

<table id='route-table' class="table table-striped table-bordered table-sm">
    <thead>
        <tr>
            <th scope="col">@Html.DisplayNameFor(model => model.Cues.First().Operation)</th>
            <th scope="col">@Html.DisplayNameFor(model => model.Cues.First().StreetName)</th>
            <th scope="col">@Html.DisplayNameFor(model => model.Cues.First().Notes)</th>
            <th scope="col">@Html.DisplayNameFor(model => model.Cues.First().MileMarker)</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var cueRow in Model.Cues)
        {
            @Html.DisplayFor(modelItem => cueRow,"CueSheetTableRow")
        }
    </tbody>
</table>


